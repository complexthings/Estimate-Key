{
    "esversion":    6,       // Specify the ECMAScript version to which the code must adhere.
    "bitwise":      true,   // true: Prohibit bitwise operators (&, |, ^, etc.)
    "indent":       4,      // Number of spaces to use for indentation
    "eqeqeq":       true,   // Require triple equals (===) for comparison
    "newcap":       true,   // Require capitalization of all constructor functions e.g. `new F()`,
    "curly":        true,   // Require {} for every new block or scope
    "nonew":        true,   // Prohibit use of constructors for side-effects (without assignment)
    "latedef":      false,  // true: Require variables/functions to be defined before being used
    "noarg":        true,   // true: Prohibit use of `arguments.caller` and `arguments.callee`
    "strict":       false,  // true: Requires all functions run in ES5 Strict Mode
    "undef":        true,   // true: Require all non-global variables to be declared (prevents global leaks)
    "expr":         true,  // true: Tolerate `ExpressionStatement` as Programs

    // Relaxing
    "evil":         true,   // Tolerate use of `eval` and `new Function()`
    "eqnull":       true,   // Tolerate use of `== null`
    "notypeof":     false,  // true: Tolerate invalid typeof operator values
    "loopfunc":     false,     // true: Tolerate functions being defined in loops

    // Environments
    "node":         true,
    "browser":      true,
    "prototypejs":  true,  // Prototype and Scriptaculous
    "jquery":       true,  // jQuery

    // Globals

    "globals": {
        "modules":          false,  // Node Based Global
        "grunt":            true,   // Grunt Based Global
        "define":           false,  // Require Based Global
        "export":           false,  // Node Based Global
        "jQuery":           true,   // jQuery Base Global
        "enquire":          true,   // EnquireJS Library
        "mageConfig":       false,  // BlueAcorn MageConfig Object
        "SitePreferences":  false,  // SFCC/DWRE Config Object
        "$":                true,   // jQuery/PrototypeJs Base Global
        "$j":               true,   // jQuery Base Global
        "$$":               true,   // PrototypeJS Based Global
        "bp":               true,   // Breakpoint Based Global
        "ba":               true    // Standard Blue Acorn Global
    }
}
